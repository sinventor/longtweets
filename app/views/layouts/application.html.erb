<!DOCTYPE html>
<html>
  <head>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Twitter service" %>">
    <title><%= content_for?(:title) ? yield(:title) : "Twitter service" %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
    
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>