<div class="progress">
  <div id="pro1" class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" aria-valuenow="43" aria-valuemin = "0" aria-valuemax="100" style="width: 5%">
    <span class="sr-only">45% Complete</span>
  </div>
</div>
